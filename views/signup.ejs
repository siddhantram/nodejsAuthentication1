<link rel="stylesheet" href="/css/signup.css">
<form action="/signup" method="post" class="signupContainer">
    <h1 class="signupHeading">Signup</h1>
    <div class="inputField">
        <input class="inputFieldi" type="text" name="name" placeholder='name' />
    </div>
    <div class="inputField">
        <input class="inputFieldi" type="text" name="email" placeholder='email' />
    </div>
    <div class="inputField">
        <input class="inputFieldi" type="password" name="password" placeholder='password' />
    </div>
    <div class="inputField">
        <input class="inputFieldi" type="password" name="confirm_Password" placeholder='confirm Password' />

    </div>
    <div class="btncontainer">
        <button type="submit" class="btn">Signup</button>

    </div>
    <div>
        <p>Already have an account <a href="/login">Login</a></p>
    </div>

    <div class="hr">

        <span class="span1">__________________</span>
        <span class="spanor">Or</span>
        <span class="span2">__________________</span>

    </div>


    <div class="btncontainer">
        <div class="gbtn">
            <img class="gimg" src="https://img.icons8.com/color/1x/google-logo.png" alt="" />
            <a class="glink " href="/auth/google">Login with google</a>
        </div>
    </div>






</form>
